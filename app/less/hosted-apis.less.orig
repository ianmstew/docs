@import "dashboard.less";

@footer-height: 60px;

// Main Styles
// --------------------------------------------------

body {
  width: 100%;
  padding: 0;
}

.sticky-footer-wrap {
  position: relative;
  min-height: 100%;
}

.content {
  // make room for absolutely positioned stick-to-bottom footer
  padding-bottom: @footer-height;
}

.header {
  > nav {
    > div {
      &:extend(.container-fluid all);
    }
  }
}

.main {
  &:extend(.container-fluid all);

  overflow:auto;
  height: 100%;
}

