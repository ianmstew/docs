// Social Network Styling
// --------------------------------------------------

.fa-twitter {
  color: #55acee;
}

.fa-facebook-square {
  color: #3b5998;
}

.fa-linkedin-square {
  color: #0e76a8;
}

.fa-github {
  color: #171515;
}

.fa-google-plus-square {
  color: #dd4b39;
}

.social-google {
  background-color: @brand-google;
}

.social-facebook {
  background-color: @brand-facebook;
}

.social-twitter {
  background-color: @brand-twitter;
}

.social-linkedin {
  background-color: @brand-linkedin;
}

// Dropdown menus
// --------------------------------------------------
/*
.avatar {
  margin-top: -7px;
}
*/


// Status Icon
// --------------------------------------------------
i.fa-smile-o {
  color: @brand-success;
}

i.fa-meh-o {
  color: @brand-warning;
}

i.fa-frown-o {
  color: @brand-danger;
}

// Footer
// --------------------------------------------------

footer {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: @footer-height;
}

.footer {
  clear: both;
  height: 100%;
  color: #FFF;
  background-color: #393939;
  line-height: @footer-height;
  text-indent: 20px;

  a {
    padding: 0 0.5%;

    &:first-child {
      padding-left: 1%;
    }
  }
}
